{
    "name": "leaditin/annotations",
    "description": "Probability distribution service",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "annotations", "docblock", "parser", "leaditin"
    ],
    "authors": [
        {
            "name": "Igor Vuckovic",
            "email": "igor@vuckovic.biz"
        }
    ],
    "require": {
        "php": "^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.7 || ^6.0",
        "friendsofphp/php-cs-fixer": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Leaditin\\Annotations\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Leaditin\\Annotations\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit --colors=always",
        "cs-fix": "php-cs-fixer fix --config=.php_cs",
        "cs-check": "php-cs-fixer fix --config=.php_cs -v --diff --dry-run"
    }
}
